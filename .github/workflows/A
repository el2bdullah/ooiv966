            platform: { text: 'منصة وطنية', badgeClass: 'platform-badge' }
        };

        function renderCards() {
            grid.innerHTML = '';
            healthEntities.forEach(entity => {
                if (entity.isSpecial) {
                    const specialCard = `
                        <div class="card bg-teal-700 text-white rounded-2xl p-6 flex flex-col items-center justify-center text-center col-span-1 sm:col-span-2 lg:col-span-3 xl:col-span-4 transform transition-all duration-300 hover:!scale-105" data-category="special">
                             <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mb-4">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                             </div>
                            <h3 class="text-xl font-bold mb-2">${entity.name}</h3>
                            <p class="mb-4 font-light opacity-80">هل تحتاج مساعدة في التقديم؟ هنا تجد شروحات بالفيديو خطوة بخطوة.</p>
                            <a href="${entity.link}" target="_blank" rel="noopener noreferrer" class="w-full sm:w-auto mt-auto inline-block bg-white text-teal-700 font-bold py-3 px-8 rounded-lg hover:bg-slate-200 transition-colors">
                                مشاهدة الشروحات
                            </a>
                        </div>`;
                    grid.innerHTML += specialCard;
                } else {
                    const catInfo = categoryMap[entity.category];
                    const cardHTML = `
                        <div class="card flex flex-col bg-white p-5 rounded-xl" data-category="${entity.category}">
                            <div class="flex-grow">
                                <div class="flex justify-between items-start mb-3">
                                    <h3 class="font-bold text-lg text-slate-800">${entity.name}</h3>
                                    ${catInfo ? `<span class="category-badge ${catInfo.badgeClass}">${catInfo.text}</span>` : ''}
                                </div>
                                ${entity.note ? `<p class="text-sm text-slate-500 mb-4">${entity.note}</p>` : ''}
                            </div>
                            <a href="${entity.link}" target="_blank" rel="noopener noreferrer" class="mt-4 w-full text-center bg-teal-600 text-white font-bold py-2.5 px-4 rounded-lg hover:bg-teal-700 transition-colors">
                                زيارة البوابة
                            </a>
                        </div>`;
                    grid.innerHTML += cardHTML;
                }
            });
        }

        function filterCards(filter) {
            const cards = document.querySelectorAll('#cards-grid .card');
            cards.forEach(card => {
                if (filter === 'all' || card.dataset.category === filter || (filter !== 'special' && card.dataset.category === 'special')) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        }

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                const filter = button.dataset.filter;
                filterCards(filter);
            });
        });

        // Initial render
        renderCards();

    </script>
</body>
</html>
